<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pricipal" >
    
    
	     
	<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_alignParentTop="true"				    	
		android:layout_centerHorizontal="true"
	    >
	    <RadioButton android:id="@+id/verde_gris"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:text="@string/verde_gris"
	        android:onClick="onRadioButtonClicked"/>
	    <RadioButton android:id="@+id/amarillo_azul"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/amarillo_azul"
	        android:onClick="onRadioButtonClicked"/>
	</RadioGroup>
	     
     <ProgressBar
			android:id="@+id/barraProgreso"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
	    	android:paddingLeft="15sp"
			android:paddingRight="15sp"
			android:paddingTop="20sp"
			android:minHeight="40sp"
			android:max="100"
			android:progressDrawable="@drawable/dw_verdegris"
           />
	
	<Button android:id="@+id/inicio"      	
	        android:text="@string/empezar" 			 		 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentBottom="true"	
             android:textSize="25sp" 			    	
      		/>

</RelativeLayout>